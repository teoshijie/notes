<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('../partials/head.ejs') %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <script src="/javascript/app.js"></script>
  <script src="https://use.fontawesome.com/dca76f424c.js"></script>
  <link rel="stylesheet" href="../css/app.css">
</head>

<body>

  <div class="container1">
    <div class="header">
      <img src=<%= images[Math.floor(Math.random()*Object.keys(images).length)].img %>>
      <div class="bottom-left">
        <h1>
          <script> document.write(new Date().toDateString()) </script>
        </h1>
      </div>

      <div class="top-right">
        <form action="/sessions?_method=DELETE" method="post">
          <button type="submit" class="btn btn-light btn-lg">
            <i class="fa fa-sign-out fa-2x" aria-hidden="true"></i>
          </button>
        </form>
      </div>

    </div>

    <p class="notes">My Notes</p>

    <a href='/new'><svg width="4em" height="4em" viewBox="0 0 16 16" class="bi bi-plus-circle-fill plus"
        fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd"
          d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4a.5.5 0 0 0-1 0v3.5H4a.5.5 0 0 0 0 1h3.5V12a.5.5 0 0 0 1 0V8.5H12a.5.5 0 0 0 0-1H8.5V4z" />
      </svg></a>

    <div class="card-columns col-sm-11 mx-auto" id="bootstrap-overrides">
      <% data.forEach(data => { %>
      <a href="/mynotes/<%= data._id %>/edit">
        <div class="card bg-light mb-3 mx-auto" id="bootstrap-overrides" style="width: 95%;">
          <div class="card-body mx-auto" id="bootstrap-overrides">
            <p class="card-text text-dark mx-auto" id="bootstrap-overrides"><%= data.description %></p>
          </div>


          <div class="delete">
            <form action="/mynotes/<%= data._id %>?_method=DELETE" method="POST">
              <button type="submit" value="DELETE">


                <a href="/mynotes/<%= data._id%>"></a><svg width="1em" height="1em" viewBox="0 0 16 16"
                  class="bi bi-trash trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                  <path fill-rule="evenodd"
                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                </svg></i>
      </a>
      </button>
      </form>
    </div>

  </div>
  </a>
  <% }) %>
  </div>
  </div>







</body>

</html>